<div class="container">
   <div class="card text-center mt-5">
       <div class="card-header">
           Users
       </div>
       <div class="card-body">
           <table class="table table-striped table-hover table-bordered text-center">
               <thead class="thead-dark">
                   <tr>
                       <th>S.N.</th>
                       <th>Name</th>
                       <th>Address</th>
                       <th>Citizenship Number</th>
                       <th>License Number</th>
                   </tr>
               </thead>
               <tbody>
                   {{#each users}}
                   <tr>
                       <td>{{this.id}}</td>
                       <td>{{this.name}}</td>
                       <td>{{this.address}}</td>
                       <td>{{this.citizenship_no}}</td>
                       <td>{{this.license_no}}</td>
                   </tr>
                   {{/each}}
               </tbody>
           </table>
       </div>
   </div>
   <div class="card text-center mt-5">
       <div class="card-header">
           Vehicles
       </div>
       <div class="card-body">
           <table class="table table-striped table-hover table-bordered text-center">
               <thead class="thead-dark">
                   <tr>
                       <th>S.N.</th>
                       <th>License Plate Number</th>
                       <th>Color</th>
                       <th>Type of Vehicle</th>
                       <th>Model</th>
                   </tr>
               </thead>
               <tbody>
                   {{#each vehicles}}
                   <tr>
                       <td>{{this.id}}</td>
                       <td>{{this.licensePlateNo}}</td>
                       <td>{{this.color}}</td>
                       <td>{{this.typeofVehicle}}</td>
                       <td>{{this.model}}</td>
                   </tr>
                   {{/each}}
               </tbody>
           </table>
       </div>
   </div>
      <div class="card text-center mt-5">
       <div class="card-header">
           Infraction Records
       </div>
       <div class="card-body">
           <table class="table table-striped table-hover table-bordered text-center">
               <thead class="thead-dark">
                   <tr>
                       <th>S.N.</th>
                       <th>Type of Infraction</th>
                       <th>Severity</th>
                       <th>Date</th>
                       <th>Time</th>
                       <th>Location</th>
                   </tr>
               </thead>
               <tbody>
                   {{#each records}}
                   <tr>
                       <td>{{this.id}}</td>
                       <td>{{this.type}}</td>
                       <td>{{this.severity}}</td>
                       <td>{{this.date}}</td>
                       <td>{{this.time}}</td>
                       <td>{{this.location}}</td>
                   </tr>
                   {{/each}}
               </tbody>
           </table>
       </div>
   </div>
   <div class="accordion mt-5" id="accordionExample">
        <div class="card">
            <div class="card-header text-center" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn collapsed" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Add Vehicle
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body"> 
                    <form method="POST" id="vehicleAddForm" novalidate>
                        <div class="form-group">
                            <label for="licensePlateNo">License Number</label>
                            <input type="text" class="form-control" id="licensePlateNo" 
                                name="licensePlateNo" placeholder="Enter license Number" required>
                            <div class="invalid-feedback">
                                Please enter a valid license number
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="color">Color</label>
                            <select name="color" id="color" class="form-control">
                                <option value="black">Black</option>
                                <option value="blue">Blue</option>
                                <option value="green">Green</option>
                                <option value="yellow">Yellow</option>
                                <option value="red">Red</option>
                                <option value="purple">Purple</option>
                                <option value="brown">Brown</option>
                                <option value="white">White</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="typeofVehicle">Type of Vehicle</label>
                            <select name="typeofVehicle" id="typeofVehicle" class="form-control">
                                <option value="car">Car</option>
                                <option value="bus">Bus</option>
                                <option value="truck">Truck</option>
                                <option value="scooter">Scooter</option>
                                <option value="moped">Moped</option>
                                <option value="motorbike">Motorbike</option>
                                <option value="SUV">SUV</option>
                                <option value="van">Van</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="model">Model of Vehicle</label>
                            <input type="text" name="model" id="model" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="owner_ref">Owner</label>
                            <select name="owner_ref" id="owner_ref" class="form-control" style="width:100%">
                                <option value="INVALID">Select Owner</option>
                                {{#each users}}
                                    <option value="{{this.id}}">{{this.name}} {{this.license_no}}</option>
                                {{/each}}
                            </select>    
                            <div class="invalid-feedback">
                                Please select a valid owner 
                            </div>                        
                        </div>
                        <button class="btn btn-primary" id="vehicleDataSubmit">Submit</button>                        
                    </form>
                </div>
            </div>
        </div>
