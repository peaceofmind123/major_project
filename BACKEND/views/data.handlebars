<script src="/js/data.js"></script>
<div class="container">
   <div class="card text-center mt-5">
       <div class="card-header">
           Users
       </div>
       <div class="card-body">
           <table class="table table-striped table-hover table-bordered text-center">
               <thead class="thead-dark">
                   <tr>
                       <th>S.N.</th>
                       <th>Name</th>
                       <th>Address</th>
                       <th>Citizenship Number</th>
                       <th>License Number</th>
                   </tr>
               </thead>
               <tbody>
                   {{#each users}}
                   <tr>
                       <td>{{this.id}}</td>
                       <td>{{this.name}}</td>
                       <td>{{this.address}}</td>
                       <td>{{this.citizenship_no}}</td>
                       <td>{{this.license_no}}</td>
                   </tr>
                   {{/each}}
               </tbody>
           </table>
       </div>
   </div>
   <div class="card text-center mt-5">
       <div class="card-header">
           Vehicles
       </div>
       <div class="card-body">
           <table class="table table-striped table-hover table-bordered text-center">
               <thead class="thead-dark">
                   <tr>
                       <th>S.N.</th>
                       <th>License Plate Number</th>
                       <th>Color</th>
                       <th>Type of Vehicle</th>
                       <th>Model</th>
                   </tr>
               </thead>
               <tbody>
                   {{#each vehicles}}
                   <tr>
                       <td>{{this.id}}</td>
                       <td>{{this.licensePlateNo}}</td>
                       <td>{{this.color}}</td>
                       <td>{{this.typeofVehicle}}</td>
                       <td>{{this.model}}</td>
                   </tr>
                   {{/each}}
               </tbody>
           </table>
       </div>
   </div>
      <div class="card text-center mt-5">
       <div class="card-header">
           Infraction Records
       </div>
       <div class="card-body">
           <table class="table table-striped table-hover table-bordered text-center">
               <thead class="thead-dark">
                   <tr>
                       <th>S.N.</th>
                       <th>Type of Infraction</th>
                       <th>Severity</th>
                       <th>Date</th>
                       <th>Time</th>
                       <th>Location</th>
                   </tr>
               </thead>
               <tbody>
                   {{#each records}}
                   <tr>
                       <td>{{this.id}}</td>
                       <td>{{this.type}}</td>
                       <td>{{this.severity}}</td>
                       <td>{{this.date}}</td>
                       <td>{{this.time}}</td>
                       <td>{{this.location}}</td>
                   </tr>
                   {{/each}}
               </tbody>
           </table>
       </div>
   </div>
   <div class="accordion mt-5" id="accordionExample">
        <div class="card">
            <div class="card-header text-center" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn collapsed" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Add Vehicle
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body"> 
                    <form method="POST" id="vehicleAddForm" novalidate>
                        <div class="form-group">
                            <label for="licensePlateNo">License Number</label>
                            <input type="text" class="form-control" id="licensePlateNo" 
                                name="licensePlateNo" placeholder="Enter license Number" required>
                            <div class="invalid-feedback">
                                Please enter a valid license number
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="color">Color</label>
                            <select name="color" id="color" class="form-control">
                                <option value="black">Black</option>
                                <option value="blue">Blue</option>
                                <option value="green">Green</option>
                                <option value="yellow">Yellow</option>
                                <option value="red">Red</option>
                                <option value="purple">Purple</option>
                                <option value="brown">Brown</option>
                                <option value="white">White</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="typeofVehicle">Type of Vehicle</label>
                            <select name="typeofVehicle" id="typeofVehicle" class="form-control">
                                <option value="car">Car</option>
                                <option value="bus">Bus</option>
                                <option value="truck">Truck</option>
                                <option value="scooter">Scooter</option>
                                <option value="moped">Moped</option>
                                <option value="motorbike">Motorbike</option>
                                <option value="SUV">SUV</option>
                                <option value="van">Van</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="model">Model of Vehicle</label>
                            <input type="text" name="model" 
                                id="model" placeholder="Enter Model of Vehicle" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="owner_ref">Owner</label>
                            <select name="owner_ref" id="owner_ref" class="form-control" style="width:100%">
                                <option value="INVALID">Select Owner</option>
                                {{#each users}}
                                    <option value="{{this.id}}">{{this.name}} {{this.license_no}}</option>
                                {{/each}}
                            </select>    
                            <div class="invalid-feedback">
                                Please select a valid owner 
                            </div>                        
                        </div>
                        <button class="btn btn-primary form-control" id="vehicleDataSubmit">Submit</button>                        
                    </form>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header text-center" id="headingTwo">
            <h2 class="mb-0">
                <button class="btn collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Add Person
                </button>
            </h2>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
            <div class="card-body">
                <form method="POST" id="userAddForm" novalidate>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name"
                            name="name" placeholder="Enter Name" required>
                        <div class="invalid-feedback">
                            Please enter a name
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" 
                        id="address" name="address" placeholder="Enter Address" required>
                        <div class="invalid-feedback">
                            Please enter a valid address
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="citizenship_no">Citizenship Number</label>
                        <input type="text" class="form-control" id="citizenship_no" 
                            name="citizenship_no" placeholder="Enter Citizenship Number" required>
                        <div class="invalid-feedback">
                            Please enter a valid citizenship number
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="license_no">License Number</label>
                        <input type="text" class="form-control" 
                            id="license_no" name="license_no"  placeholder="Enter License Number" 
                            required>
                        <div class="invalid-feedback">
                            Please enter a valid license number
                        </div>
                    </div>
                    <button class="btn btn-primary form-control" id="userDataSubmit">Submit</button>
                </form>
            </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header text-center" id="headingThree">
            <h2 class="mb-0">
                <button class="btn collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Add Infraction Record
                </button>
            </h2>
            </div>
            <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
            <div class="card-body">
                <form method="post" id="infractionAddForm" novalidate>
                    <div class="form-group">
                        <label for="type">Type of Infraction</label>
                        <select name="type" id="type" class="form-control">
                            <option value="lane infraction">Lane Infraction</option>
                            <option value="accident">Accident</option>
                            <option value="overspeeding">Overspeeding</option>
                            <option value="drunk driving">Drunk Driving</option>
                            <option value="reckless driving">Reckless Driving</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="severity">Severity</label>
                        <select name="severity" id="severity" class="form-control">
                            <option value="mild">Mild</option>
                            <option value="moderate">Moderate</option>
                            <option value="severe">Severe</option>
                            <option value="fatal">Fatal</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="date">Date of Infraction</label>
                        <input type="text" name="date" id="date" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="time">Time of Infraction</label>
                        <input type="text" name="time" id="time" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="location">Location of Infraction</label>
                        <input type="text" name="location" id="location" class="form-control">
                    </div>
                    <div class="form-group">
                            <label for="userId">Person</label>
                            <select name="userId" id="userId" class="form-control" style="width:100%">
                                <option value="INVALID">Select Person</option>
                                {{#each users}}
                                    <option value="{{this.id}}">{{this.name}} {{this.license_no}}</option>
                                {{/each}}
                            </select>    
                            <div class="invalid-feedback">
                                Please select a valid user 
                            </div>                        
                        </div>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>